<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dp" />

            <gradient
                android:centerColor="@color/black"
                android:endColor="@color/black"
                android:startColor="@color/black" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dp" />

                <gradient
                    android:centerColor="@color/global_record2"
                    android:endColor="@color/global_record2"
                    android:startColor="@color/global_record2" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dp" />

                <gradient
                    android:centerColor="@color/global_record3"
                    android:endColor="@color/global_record3"
                    android:startColor="@color/global_record3" />
            </shape>
        </clip>
    </item>
    
